<div class="row-fluid">
  <div id="bounty-page-area" class="span8 offset2">
    Artist Details
    <ul>
      <li><%= @artist.name %></li>
      <li><%= @artist.email %></li>
      <li><%= @artist.bio %></li>
      <li><%= @artist.bounty_rules %></li>
      <li><%= @artist.approved %></li>
      <li><%= @artist.created_at.to_s(:joined_on) %></li>
    </ul>

    Artist's Accepted Bounties
    <ul>
      <% unless @bounties.empty? %>
        <% @bounties.each do |b| %>
          <li><%= b.name %><% if b.status == 'Completed' %> | <%= b.url %><% end %></li>
        <% end %>
      <% else %>
        You haven't accepted any bounties!
      <% end %>
    </ul>

    <% if signed_in? %>

      <% if (@artist == currentUser) || currentUser.is_admin? %>
        <%=   link_to 'Update', edit_artist_path(@artist.id, "Edit"), class: 'btn btn-primary' %><br><br>
      <% end %>

      <% if currentUser.is_admin? %>
        <%=   link_to 'Delete', @artist, :confirm => "Are you sure you want to delete #{@artist.name}?", :method => :delete, class: 'btn btn-primary' %><br><br>
      <% end %>

      <% if currentUser.is_admin? %>
        <%=   link_to 'Approve', artist_path(:artist => {:approved => true}), :method => :put, :confirm => "Are you sure you want to approve this artist?", class: 'btn btn-primary' %><br><br>
      <% end %>

      <%=   link_to 'Back', root_path, class: 'btn btn-primary' %><br><br>

    <% end %>
  </div>
</div>
