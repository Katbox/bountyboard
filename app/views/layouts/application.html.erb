# encoding: UTF-8
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>The Bounty Board</title>

	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<script src="https://browserid.org/include.js" type="text/javascript"></script>
	<%= csrf_meta_tags %>

	<!-- provide HTML5 compatibility for IE 8 and older -->
	<!--[if lt IE 9]>
	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>

<body>
<!-- 	Header navigation bar on the top of the page with sign-in controls. -->
	
	<%= render 'layouts/nav_bar' %>

	<% [:notice, :error, :alert].each do |level| %>
		<% unless flash[level].blank? %>
			<div class="alert <%= flash_class(level) %>">
				<a class="close" href="#">Ã—</a>
				<%= content_tag :p, flash[level] %>
			</div>
		<% end %>
	<% end %>

<!-- 	Greeting to be later styled and image enhanced to resemble a RL bounty. -->	
	<div class="hero-unit">
			<h3 class="board-header">Welcome to the Bounty Board</h3>
			<h4 class="board-subheader">
				A project that connects artists to fans and fans to the artwork they
				love.
			</h4>
			<%= render 'layouts/post_bounty_button' %>
	</div>

<!-- 	Primary Board Index Content -->	
	<div class="container-fluid">
		<%= yield %>
	</div>

<!-- 	Footer with copyright and liscence info. -->	
	<hr>
	<%= render 'layouts/footer' %>

	<!-- hidden login form; the login buttons link to and submit this form -->
	<form id="browser-id-form" action="/auth/browser_id/callback">
		<input type="hidden" name="assertion">
		<button type="submit"></button>
	</form>

</body>
</html>
