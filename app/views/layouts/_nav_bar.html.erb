# -*- encoding : utf-8 -*-
<header class="navbar">
  <span class="nav-left">
    <%= link_to 'The Bounty Board', root_path, class: 'brand' %>
    <ul>
      <li><%= link_to 'About', '#' %></li>
      <li class="dropdown">
        <a id="filters-dialog-show" class="dropdown-toggle" data-toggle="dropdown" href="#">
          Filter Displayed Bounties
        </a>
        <%= render 'layouts/filters_controls' %>
      </li>
      <li><%= link_to 'Show All Artists', artists_path %></li>
      <% if signed_in? && currentUser.admin? %>
        <li><%= link_to 'New Artist', new_artist_path %></li>
      <% end %>
    </ul>
  </span>
  <span class="nav-right">
    <% if signed_in? %>
      <span class="login-notify-area">Logged in as <%= currentUser.get_identifier() %><%= render 'artists/show_artist_button' %></span>
    <%  else %>
      <button class="persona-login-button">Sign In with Persona</button>
    <%  end %>
  </span>
</header>

