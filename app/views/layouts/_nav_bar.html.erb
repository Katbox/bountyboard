<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">
      <%= link_to 'The Bounty Board', root_path, class: 'brand' %>
      <nav class="nav-collapse collapse">
        <ul class="nav">
          <li><%= link_to 'About', '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b class="caret"></b> Sorting by: Popularity</a>
            <ul class="dropdown-menu">
              <li><a href="#">Popularity</a></li>
              <li><a href="#">Age</a></li>
              <li><a href="#">Price</a></li>
            </ul>
          </li>
          <li id="filter-controls" class="dropdown">
            <a href="#" class="dropdown-toggle"><b class="caret"></b> Filters</a>
            <div title="Filter Options">
              <ul>
                <li>No Adult Content</li>
                <li>Price <input type="number" step="1.00" min="1.00" value="10.00"</li>
                <li>
                  <h4>Artist </h4>
                  <ul>
                    <li>Artist 1</li>
                    <li>Artist 2</li>
                    <li>Artist 3</li>
                    <li>Artist 4</li>
                  </ul>
                </li>
              </ul>
            </div>
          </li>
        </ul>
      </nav>
      <span class="pull-right">
      <% if signedIn? %>
        <span class="login-notify-area">Logged in as <%= currentUser.get_identifier() %></span>
      <%  else %>
        <button class="persona-login-button btn" type="button">Sign In with Persona</button>
      <%  end %>
      </span>
    </div>
  </div>
</header>

