<nav>
  <%= link_to 'The Bounty Board', root_path %>
  <%= link_to 'About', '#' %>
  <%= link_to 'Show All Artists', artists_path %>
  <% if signed_in? && currentUser.admin? %>
    <%= link_to 'New Artist', new_artist_path %>
  <% end %>
  <% if signed_in? && currentUser.is_a?(Artist) %>
    <%= link_to 'Your Profile', artist_path(currentUser.id) %>
  <% end %>
  <% if controller_name == 'bounties' && action_name == 'index' %>
    <a data-dropdown="#dropdown-filters-controls" href="#">
      Filter Displayed Bounties
    </a>
  <% end %>
  <% if signed_in? %>
    Show Your Bounties :
    <div id="user-bounties">
          <label for="show-owner-on">On</label><input id="show-owner-on" type="radio" name="user-bounties" value="on"><label for="show-owner-off">Off</label><input id="show-owner-off" type="radio" name="user-bounties" value="off" checked>
    </div>
    <% if currentUser.is_a?(Artist) %>
    Show Bounties You May Accept :
      <div id="artist-bounties">
            <label for="may-accept-on">On</label><input id="may-accept-on" type="radio" name="artist-bounties" value="on"><label for="may-accept-off">Off</label><input id="may-accept-off" type="radio" name="artist-bounties" value="off" checked>
      </div>
    <% end %>
  <% end %>
  <span class="login-notify-area">
    <% if signed_in? %>
          Logged in as
      <%= currentUser.get_identifier() %>
    <%  else %>
      <button class="persona-login-button">
        Sign In with Persona
      </button>
    <%  end %>
  </span>
</nav>

