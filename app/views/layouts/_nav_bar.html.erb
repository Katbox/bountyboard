# encoding: UTF-8
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">
      <%= link_to 'The Bounty Board', root_path, class: 'brand' %>
      <nav class="nav-collapse collapse">
        <ul class="nav">
          <li><%= link_to 'About', '#' %></li>
          <li>
            <a id="filters-dialog-show" href="#">
              Customize Bounty List
            </a>
          </li>
          <li><%= link_to 'Show All Artists', artists_path %></li>
          <% if signed_in? && currentUser.admin? %>
            <li><%= link_to 'New Artist', new_artist_path %></li>
          <% end %>
        </ul>
      </nav>
      <span class="pull-right">
      <% if signed_in? %>
        <span class="login-notify-area">Logged in as <%= currentUser.get_identifier() %><%= render 'artists/show_artist_button' %></span>
      <%  else %>
        <button class="persona-login-button btn" type="button">Sign In with Persona</button>
      <%  end %>
      </span>
    </div>
  </div>
</header>
<div id="filters-controls">
    <span id="bounty-cost-filter">
      <input type="checkbox" class="filter-toggle">
      Cost:
      <span class="filters-buttonset">
        <label for="filters-cost-range-high">above</label><input id="filters-cost-range-high" type="radio" name="cost-range-filter" value="1">
        <label for="filters-cost-range-low">below</label><input id="filters-cost-range-low" type="radio" name="cost-range-filter" value="0">
      </span>
      $<input type="number" min="5" step="0.01" value="5.00">
    </span>
    <span id="bounty-age-filter"><input type="checkbox" class="filter-toggle"> Max Age: <input type="range"> days</span>
    <div>
      <span id="no-adult-content-filter"><input type="checkbox" class="filter-toggle"> Don't Show Adult Content</span>
      <span id="only-adult-content-filter"><input type="checkbox" class="filter-toggle"> Only Show Adult Content</span>
    </div>
</div>

