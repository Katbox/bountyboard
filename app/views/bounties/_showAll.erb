<% if @bounty %>
  <% @bounty.sort{|b,a| a.created_at <=> b.created_at}.each do |b| %>
    <% unless b.is_private %>
      <div class="span3 bounty-square">
      <div class="nail"></div>
      <div class="ribbon-wrapper"><div class="ribbon"><%= humanized_money_with_symbol b.price %></div></div>

        <div class="name"><%= b.name %></div>
        <div class="candidates">
          <% b.candidacies.each do |c| %>
            <div id="<%= c.artist.get_identifier %>"></div>
          <% end %>
        </div>
        <div class="short-desc">
          <%= b.desc %>
          <div class="read-more"><div class="btn btn-primary">Read More</div></div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
