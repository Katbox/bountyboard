<div class="row-fluid">
  <div id="bounty-page-area" class="span8 offset2">
    <%= semantic_form_for @bounty do |bounty_form| %>
        <%= render 'shared/error_messages' %>
        <%= bounty_form.input :name %>
        <%= bounty_form.input :desc, :as => :string %>
        <%= bounty_form.input :price %>
        <%= bounty_form.input :artists, :as => :check_boxes%>
        <%= bounty_form.input :moods, :as => :check_boxes%>
        <%= bounty_form.submit %>
    <% end %>
  </div>
</div>
