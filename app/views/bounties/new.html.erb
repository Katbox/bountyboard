<div id="bountyPostArea" class="span11 offset2">
  <%= semantic_form_for @bounty do |bounty_form| %>
    <%= render 'shared/error_messages', :object => bounty_form.object %>
    <%= bounty_form.input :name %>
    <%= bounty_form.input :desc, :as => :string %>
    <%= bounty_form.input :price %>
    <%= bounty_form.submit %>
  <% end %>
</div>